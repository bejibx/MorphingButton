<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="morphingButtonStyle">@style/MorphingButton</item>
    </style>

    <style name="MorphingButton">
        <item name="android:textColor">#fff</item>
        <item name="backgroundColor">@color/morphing_shape_button_background</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">2dp</item>
        <item name="textColorOutlined">@color/morphing_shape_button_background</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <com.example.bejibx.morphingbutton.MorphingButton
        android:id="@+id/button"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:text="Добавить в корзину"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textOutlined="В корзине" />

    <Button
        android:id="@+id/buttonFilled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FILLED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonOutlined"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonOutlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="OUTLINED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonFilled" />

</android.support.constraint.ConstraintLayout>